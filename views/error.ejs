<!-- error alert template -->
<%-layout('layouts/boilersplate')  %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><%=err.message%></h4>

    <% if(process.env.NODE_ENV !=="production") {%> <!-- dont display errorstack out of development -->
    <p><%=err.stack %></p>
    <% } %>
    
  </div>
    </div>
</div>
<!-- err.stck show complete error detail using default error handler  -->
